<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/tyo">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tooltbarboos"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/green_mc3"
        android:elevation="4dp"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="268dp"
            android:layout_height="331dp"
            android:layout_margin="16dp"
            android:elevation="4dp"
            app:cardCornerRadius="31dp">

            <LinearLayout
                android:layout_width="268dp"
                android:layout_height="331dp"
                android:orientation="vertical"
                android:padding="10dp"
                android:background="@drawable/boost_background_with_border">

                <TextView
                    android:id="@+id/selfCareTipTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Self-Care Tip"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/prevTipButton"
                android:layout_width="wrap_content"
                android:layout_height="39dp"
                android:layout_marginEnd="100dp"
                android:background="@drawable/boost_button"
                android:drawableLeft="@drawable/baseline_arrow_back_24"
                android:padding="8dp"
                android:text="Prev" />

            <Button
                android:id="@+id/nextTipButton"
                android:layout_width="wrap_content"
                android:layout_height="39dp"
                android:background="@drawable/boost_button"
                android:drawableRight="@drawable/baseline_arrow_forward_24"
                android:padding="8dp"
                android:text="Next" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>