<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/tyo"
    android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".MatchTherapist">



    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolkbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/green_mc3"
        android:elevation="4dp"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        android:title="Match Therapist " />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />


            <TextView
                android:id="@+id/topic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Find Your Perfect Therapist Match"
                android:layout_marginStart="20dp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/green_mc4"
                android:textSize="22sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">


                <TextView
                    android:id="@+id/question_therapy_services"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="What type of therapy service are you seeking ?"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/dropdown_border">

                    <Spinner
                        android:id="@+id/therapy_services_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginBottom="10dp"
                        android:entries="@array/therapy_services_array"/>

                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />

                <TextView
                    android:id="@+id/question_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Where do you live ( district )?"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/dropdown_border">

                    <Spinner
                        android:id="@+id/location_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginBottom="10dp"
                        android:entries="@array/area_array" />

                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />

                <TextView
                    android:id="@+id/question_platform"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="What platform would you prefer to use to communicate with your therapist?"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/dropdown_border">

                    <Spinner
                        android:id="@+id/platform_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginBottom="10dp"
                        android:entries="@array/services_platforms_array" />

                </LinearLayout>

<!--                <Space-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="20dp" />-->

<!--                <TextView-->
<!--                    android:id="@+id/question_communication_medium"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text="How do you prefer to communicate with your therapist?"-->
<!--                    android:layout_marginStart="5dp"-->
<!--                    android:textColor="@color/black"-->
<!--                    android:textSize="16sp" />-->

<!--                <LinearLayout-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="35dp"-->
<!--                    android:layout_marginTop="5dp"-->
<!--                    android:background="@drawable/dropdown_border">-->

<!--                    <Spinner-->
<!--                        android:id="@+id/communication_medium_spinner"-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="35dp"-->
<!--                        android:layout_marginBottom="10dp"-->
<!--                        android:entries="@array/communication_mediums_array" />-->

<!--                </LinearLayout>-->

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />

                <TextView
                    android:id="@+id/question_languages"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="In which language would you like the therapy to be conducted?"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/dropdown_border">

                    <Spinner
                        android:id="@+id/languages_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginBottom="10dp"
                        android:entries="@array/offered_languages_array" />

                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />

                <TextView
                    android:id="@+id/question_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="What gender do you prefer your therapist to be?"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/dropdown_border">

                    <Spinner
                        android:id="@+id/gender_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginBottom="10dp"
                        android:entries="@array/gender_array" />

                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />


                <Button
                    android:id="@+id/submit_button"
                    android:layout_width="150dp"
                    android:layout_height="35dp"
                    android:layout_gravity="end"
                    android:layout_marginTop="35dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/round_button_small"
                    android:backgroundTint="@color/green_mc2"
                    android:text="Submit" />



                <androidx.cardview.widget.CardView
                    android:id="@+id/result_card"
                    android:layout_width="match_parent"
                    android:layout_height="112dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:elevation="2dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:padding="16dp"
                    android:visibility="invisible"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/prof_border"
                        android:orientation="horizontal">


                        <ImageView
                            android:id="@+id/profile_image"
                            android:layout_width="134dp"
                            android:layout_height="match_parent"
                            android:padding="10dp"
                            android:src="@drawable/default_profile_image"
                            android:visibility="invisible" />

                        <LinearLayout
                            android:id="@+id/layout_details_two"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/therapist_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:layout_marginTop="15dp"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/services_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="20dp"
                                android:textSize="15sp" />
                        </LinearLayout>
                    </LinearLayout>


                </androidx.cardview.widget.CardView>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>